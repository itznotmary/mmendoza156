num_penguins=int(input("Enter the number of penguins"))
num_seals=int(input("Enter the number of seals"))
num_polar_bears=int(input("Enter the number of polar bears"))
print(daily_penguin_ration)
print(daily_polar_bear_ration)
print(daily_seal_ration)
monthly_penguin_consumption= round(num_penguins*daily_penguin_ration*30)
monthly_seal_consumption= round(num_seals*daily_seal_ration*30)
monthly_polar_bear_consumption= round(num_polar_bears*daily_polar_bear_ration*30)
print(f"The food consumed by penguins is {monthly_penguin_consumption} kg")
print(f"The food consumed by seals is {monthly_seal_consumption} kg")
print(f"The food consumed by polar bears is {monthly_polar_bear_consumption} kg")
